<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorsaUygulama.Pages.GirisYap"
             Title="GirisYap"
             BackgroundImageSource="giris_bg_last.png">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0">

        <Label 
            HorizontalOptions="Center"
            TextColor="White"
            Text="Borsa Kaydınıza Hoşgeldiniz"
            FontAttributes="Bold"
            FontSize="Large"/>

        <Entry 
            Placeholder="Kullanıcı Adı"
            BackgroundColor="#F6F1F1"
            TextColor="#000000"
            WidthRequest="300" 
            x:Name="entryKullaniciAd"/>

        <Entry 
            Placeholder="Şifre"
            BackgroundColor="#F6F1F1"
            TextColor="#000000"
            WidthRequest="300" 
            IsPassword="True"
            x:Name="entrySifre"/>

        <Label
            x:Name="Yanlis_giris_bilgileri"
            Text="Giriş Biligileriniz Doğru Değil!"
            HorizontalOptions="Center"
            WidthRequest="300"
            IsVisible="false"
            TextColor="#F6F1F1"/>

        <Button 
            Text="Giriş Yap" 
            FontSize="Medium"
            WidthRequest="300"
            BackgroundColor="#146C94" 
            x:Name="btnGiris"
            Pressed="btnGiris_Pressed"
            Released="btnGiris_Released"/>

        <Button 
            Text="Üye Ol"
            FontSize="Medium"
            WidthRequest="300" 
            BackgroundColor="#20F74F"  
            x:Name="btnUyeOl"
            Pressed="btnUyeOl_Pressed"
            Released="btnUyeOl_Released"/>

    </VerticalStackLayout>
</ContentPage>