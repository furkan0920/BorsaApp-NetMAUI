        <VerticalStackLayout>

            <Label Text="tabbed deneme sayfa 3"/>

        </VerticalStackLayout>
    </ContentPage>-->
    <!--#endregion-->

    <ContentPage Title="Hesabım" x:Name="hesabimSayfa">
        <VerticalStackLayout
            BackgroundColor="Black"
            Spacing="25"
            HorizontalOptions="Center">

            <VerticalStackLayout x:Name="Hesap_Bilgileri">
                <Label
                    HorizontalOptions="Center"
                    Text="Aktif Kullanıcı Bilgileri"
                    BackgroundColor="BlueViolet"
                    TextColor="WhiteSmoke"
                    FontSize="Medium"
                    Margin="0,0,0,20"/>

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label
                        Text="Ad:"
                        TextColor="Yellow"
                        FontSize="Small"/>
                    <Label
                        x:Name="Hesabim_Ad"
                        BackgroundColor="Red"
                        TextColor="WhiteSmoke"
                        FontSize="Small"
                        WidthRequest="100"
                        Margin="20,0,0,20"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label
                        Text="Soyad:"
                        TextColor="Yellow"
                        FontSize="Small"/>
                    <Label
                        x:Name="Hesabim_Soyad"
                        BackgroundColor="Red"
                        TextColor="WhiteSmoke"
                        FontSize="Small"
                        WidthRequest="100"
                        Margin="10,0,0,40"/>
                </HorizontalStackLayout>

                <Label
                    HorizontalOptions="Center"
                    Text="Şifre Değiştir"
                    BackgroundColor="BlueViolet"
                    TextColor="WhiteSmoke"
                    FontSize="Medium"
                    Margin="0,0,0,20"/>

                <HorizontalStackLayout>
                    <Label
                        x:Name="Hesabim_Sifre"
                        WidthRequest="150"
                        VerticalOptions="Center"
                        Text="Yeni Şifre"
                        BackgroundColor="Red"
                        TextColor="WhiteSmoke"
                        Margin="0,0,30,0"/>

                    <Entry 
                        x:Name="txtSifre_update"
                        IsPassword="True"
                        Placeholder="şifre"
                        WidthRequest="250"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label
                        x:Name="Hesabim_Sifre_Tekrar"
                        WidthRequest="150"
                        VerticalOptions="Center"
                        Text="Yeni Şifre Tekrar"
                        BackgroundColor="Red"
                        TextColor="WhiteSmoke"
                        Margin="0,0,30,0"/>

                    <Entry 
                        x:Name="txtSifre_tekrar_update"
                        IsPassword="True"
                        Placeholder="şifre tekrar"
                        WidthRequest="250"/>

                </HorizontalStackLayout>

                <Label
                    x:Name="Yanlis_sifre_bilgileri"
                    Text="Girdiğiniz Şifreler Eşleşmiyor!"
                    HorizontalOptions="Center"
                    WidthRequest="300"
                    IsVisible="false"
                    TextColor="Cyan"/>

            </VerticalStackLayout>

            <Button
                    x:Name="Hesabim_Sifre_Degistir_Btn"
                    BackgroundColor="Yellow"
                    TextColor="Black"
                    Text="Şifre Değiştir"
                    Clicked="Hesabim_Sifre_Degistir_Btn_Clicked"/>

            <Button
                    x:Name="Hesabim_Cikis_Yap_Btn"
                    BackgroundColor="Cyan"
                    TextColor="Black"
                    Text="Çıkış Yap"
                    Clicked="Hesabim_Cikis_Yap_Btn_Clicked"/>


        </VerticalStackLayout>

    </ContentPage>



</TabbedPage>
